generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  phone    String   @unique
  password String
  reports  Report[] @relation("UserReports") // 실제 DB에 컬럼은 없고 관계 설정을 위한 필드
}

model Report {
  id           Int      @id @default(autoincrement())
  userId       Int // 실제 DB 컬럼
  user         User     @relation("UserReports", fields: [userId], references: [id]) // 관계 필드
  // "UserReports"는 관계 이름, fields는 외래 키 필드, references는 참조 테이블의 기본키 컬럼
  images       String[]
  title        String
  category     String
  description  String
  lat          Float
  lon          Float
  dangerDegree String
  dangerCount  Int      @default(0)
  isDanger     Boolean  @default(false)
  status       String   @default("대기")
  createdAt    DateTime @default(now())
}
