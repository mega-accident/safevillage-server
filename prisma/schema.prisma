generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  phone    String @unique
  password String
}

model Report {
  id           Int      @id @default(autoincrement())
  images       String[]
  title        String
  category     String
  description  String
  lat          Float
  lon          Float
  dangerDegree String
  dangerCount  Int      @default(0)
  isDanger     Boolean  @default(false)
  status       String   @default("대기")
  createdAt    DateTime @default(now())
}
